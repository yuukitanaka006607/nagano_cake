<div class="container justify-content-center">
  <h1>会員一覧</h1>
    <table class="table table-hover table-inverse mt-5">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
     <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to admin_customer_path(customer.id) do %>
          <%= customer.last_name %><%= customer.first_name %>
          <% end %></td>
        <td><%= customer.email %></td>
        <% if customer.is_active %>
          <td><p class="text-success">有効</p></td>
         <% elsif %>
          <td><p class="text-meted">退会</p></td>
        <% end %>
      </tr>
     <% end %>
    </table>
    <%= paginate @customers %>
</div>