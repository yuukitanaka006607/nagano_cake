
<div class="container justify-content-center mt-5">
  <h1>注文履歴一覧</h1>
    <table class="table table-hover table-inverse mt-5">
      <thead>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order) %></td>
          <td><%= order.customer.full_name %></td>
          <td><%= order.order_items.sum(:amount) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
</div>