<%= link_to "新規登録", "admin/items/new" %>
<h1>注文履歴一覧</h1>
<table>
  <thead>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
  </thead>
  <tbody>
    <% @order_items.each do |order_item| %>
    <tr>
      <td><%= link_to order_item.created_at.strftime('%Y/%m/%d'), admin_order_path(order_item) %></td>
      <td><%= order_item.order.name %></td>
      <td><%= order_item.amount %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @order_items %>