<div class="containar d-flex justify-content-center">
<%= form_with model: @item, url:admin_item_path(@item.id), method: :patch do |f| %>
<h1>商品編集</h1>
  <p>商品画像 <%= f.file_field :image, accept: "image/*" %></p>
  <p>商品名 <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control" %></p>
  <p>商品説明 <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class:"form-control" %></p>
  <p>税抜価格 <%= f.text_field :price, autofocus: true, id:"inputPrice", class:"form-control" %></p>
  <%= f.submit "変更を保存", class:"btn btn-success" %>
<% end %>
</div>