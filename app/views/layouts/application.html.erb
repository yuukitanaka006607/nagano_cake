<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column ch-100">
    <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light">
          <div class="container">
            <a class="navbar-brand p-3"><strong>Nagano Cake</strong></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                          aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
               <% if customer_signed_in? %>
               <li class="nav-item">
                <%= link_to "マイページ", customers_my_page_path, class: 'nav-link, btn btn-outline-secondary'  %>
               </li>
               <li class="nav-item">
                <%= link_to "商品一覧", public_items_path, class: 'nav-link, btn btn-outline-secondary' %>
               </li>
               <li class="nav-item">
                <%= link_to "カート", cart_items_path, class: 'nav-link, btn btn-outline-secondary' %>
               </li>
               <li class="nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link, btn btn-outline-secondary' %>
               </li>
               <% elsif admin_signed_in? %>
               <li class="nav-item">
                <%= link_to "商品一覧", admin_items_path, class: 'nav-link, btn btn-outline-secondary' %>
               </li>
               <li class="nav-item">
                <%= link_to "会員一覧", admin_customers_path, class: 'nav-link, btn btn-outline-secondary' %>
               </li>
               <li class="nav-item">
                <%= link_to "注文履歴一覧", admin_path, class: 'nav-link, btn btn-outline-secondary' %>
               </li>
               <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link' %>
               </li>
               <% else %>
               <li class="nav-item">
                <%= link_to "About", about_path, class: 'nav-link, btn btn-outline-secondary' %>
               </li>
               <li class="nav-item">
                <%= link_to "商品一覧", public_items_path, class: 'nav-link, btn btn-outline-secondary' %>
               </li>
               <li class="nav-item">
                <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link, btn btn-outline-secondary' %>
               </li>
               <li class="nav-item">
                <%= link_to "ログイン", new_customer_session_path, class: 'nav-link, btn btn-outline-secondary' %>
               </li>
               <% end %>
              </ul>
            </div>
          </div>
        </nav>
      </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
  </body>
</html>
