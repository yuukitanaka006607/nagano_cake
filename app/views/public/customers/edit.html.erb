
<div class="containar d-flex justify-content-start p-5">
<%= form_with model: @customer do |f| %>
<h1>会員情報編集</h1>
 <div class="input-group m-3">
  <p>氏名</p>
  <%= f.text_field :last_name, autoforcus: true, id:"inputLastName", class:"form-control m-3" %>
  <%= f.text_field :first_name, autoforcus: true, id:"inputFirstName", class:"form-control m-3" %>
 </div>
 <div class="input-group m-3">
  <p>フリガナ</p>
  <%= f.text_field :last_name_kana, autoforcus: true, id:"inputLastNameKana", class:"form-control m-3" %>
  <%= f.text_field :first_name_kana, autoforcus: true, id:"inputFirstNameKana", class:"form-control m-3" %>
 </div>
  <p>郵便番号 <%= f.text_field :postal_code, autoforcus: true, id:"inputPostalCode", class:"form-control m-3" %></p>
  <p>住所 <%= f.text_field :address, autoforcus: true, id:"inputAdress", class:"form-control m-3" %></p>
  <p>電話番号 <%= f.text_field :telephone_number, autoforcus: true, id:"inputTelephoneNumber", class:"form-control m-3" %></p>
  <p>メールアドレス <%= f.text_field :email, autoforcus: true, id:"inputEmail", class:"form-control m-3" %></p>
  <%= f.submit "変更内容を保存", class:"btn btn-success" %>   <%= link_to "退会する", customers_check_path, class:"btn btn-danger" %>
<% end %>