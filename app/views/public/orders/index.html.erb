<div class="container justify-content-center mt-5">
  <h1>注文履歴一覧</h1>
  <table class="table table-hover table-inverse mt-5">
    <thead>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.customer.address %></td>
        <td><% order.order_items.each do |order_item| %>
        <%= order_item.item.name %>
        <% end %></td>
        <td><%= order.billing_amount %>円</td>
        <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary"  %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
    <%= link_to_prev_page @orders, '前へ',class:"btn btn-primary" %>
    <%= link_to_next_page @orders, '次へ',class:"btn btn-primary" %>
</div>