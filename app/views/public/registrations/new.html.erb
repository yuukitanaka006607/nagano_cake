<h2>新規会員登録</h2>
<div class="containar d-flex justify-content-start p-5">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="input-group">
    <p>名前</p>
    <div class ="field m-3">
      <%= f.label :"(姓)", class:"form-label" %>
      <%= f.text_field :last_name, class:"form-control" %>
    </div>
    <div class ="field m-3">
      <%= f.label :"(名)", class:"form-label" %>
      <%= f.text_field :first_name, class:"form-control" %>
    </div>
  </div>

  <div class="input-group">
    <p>フリガナ</p>
    <div class="field m-3">
      <%= f.label :"(セイ)", class:"form-label" %>
      <%= f.text_field :last_name_kana, class:"form-control" %>
    </div>
    <div class="field m-3">
      <%= f.label :"(メイ)", class:"form-label" %>
      <%= f.text_field :first_name_kana, class:"form-control" %>
    </div>
  </div>

   <div class="field m-3">
    <%= f.label :"メールアドレス", class:"form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="field m-3">
    <%= f.label :"郵便番号(ハイフンなし)", class:"form-label" %>
    <%= f.text_field :postal_code, class:"form-control" %>
  </div>

  <div class="field m-3">
    <%= f.label :"住所", class:"form-label" %>
    <%= f.text_field :address, class:"form-control" %>
  </div>

  <div class="field m-3">
    <%= f.label :"電話番号(ハイフンなし)", class:"form-label" %>
    <%= f.text_field :telephone_number, class:"form-control" %>
  </div>

  <div class="field m-3">
    <%= f.label :"パスワード(6文字以上)", class:"form-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="field m-3">
    <%= f.label :"パスワード(確認用)", class:"form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>

<div class="input-group">
  <div class="actions m-3">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
    <% end %>
  <div class="m-3">
    <%= link_to "ログイン", "public/shared/links", class:"btn btn-primary" %>
  </div>
 </div>
</div>
